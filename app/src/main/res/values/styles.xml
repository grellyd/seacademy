<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="land_button">
        <item name="android:radius">60dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#e6e6e6</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginBottom">35dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="find_proj" parent="land_button">
        <item name="android:background">#008000</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="profile" parent="land_button">
        <item name="android:background">#3668B2</item>
    </style>
    <style name="bt_apply">
        <item name="android:background">#B24736</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginLeft">70dp</item>
        <item name="android:layout_marginRight">70dp</item>
        <item name="android:textColor">#e6e6e6</item>

    </style>
    <style name="bg_collor">
        <item name="android:background">#f2f2f2</item>

    </style>
    <style name="txt_hello">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#262626</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="txt_company">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#262626</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">20dp</item>

    </style>
    <style name="img_profile">
        <item name="android:paddingTop">30dp</item>
    </style>
    <style name="txt_profile" parent="txt_company">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>
    <style name="title_bio" parent="txt_profile">
        <item name="android:textSize">30dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="txt_bio" parent="title_bio">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#333333 </item>
    </style>
    <style name="bt_contact" parent="bt_apply">
        <item name="android:background">#ED5F0B</item>
    </style>
    <style name="txt_company_profile" parent="txt_company">
        <item name="android:textSize">33dp</item>
    </style>
</resources>
